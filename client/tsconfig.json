{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ES2020",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "allowJs": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "vue-media-annotator/*": [
        "src/*"
      ],
      "dive-common/*": [
        "dive-common/*"
      ],
      "platform": [
        "platform/*"
      ]
    },
    "lib": [
      "ESNext",
      "dom"
    ]
  },
  "include": [
    "dive-common/**/*.ts",
    "dive-common/**/*.vue",
    "platform/**/*.vue",
    "platform/**/*.ts",
    "src/**/*.ts",
    "src/**/*.vue",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
