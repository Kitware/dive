{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "allowJs": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "baseUrl": ".",
    "types": [
      "vuetify",
      "webpack-env"
    ],
    "paths": {
      "vue-media-annotator/*": [
        "src/*"
      ],
      "viame-web-common/*": [
        "viame-web-common/*"
      ],
      "platform": [
        "platform/*"
      ]
    },
    "lib": [
      "ES2017.Object",
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "typeRoots": [
      "src/@types",
      "./node_modules/@types",
      "./node_modules/vuetify/types"
    ]
  },
  "include": [
    "viame-web-common/**/*.ts",
    "viame-web-common/**/*.vue",
    "platform/**/*.vue",
    "platform/**/*.ts",
    "src/**/*.ts",
    "src/**/*.vue",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
